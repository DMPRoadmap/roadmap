<h1><%= t("helpers.sign_in") %></h1>
<div class="dmp_details_body">

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="dmp_details">
			<table class="dmp_details_table">
				<tr>
					<td class="first"><%= t("helpers.email") %></td>
					<td><%= f.email_field :email, :autofocus => true %></td>
				</tr>
				<tr>
					<td class="first"><%= t("helpers.password") %></td>
					<td><%= f.password_field :password %></td>
				</tr>
				<tr>
					<td class="first"> </td>
					<td><% if devise_mapping.rememberable? -%>
		    			<div>
		    				<%= f.check_box :remember_me %> 
		    				<%= f.label :remember_me %>
		    			</div>
		  				<% end -%>
		  			</td>
				</tr>
			</table>
		  	<div class="div_right">
		  		<%= f.submit t("helpers.sign_in"), :class => "btn btn-primary" %>
		  	</div>
		</div>
	<% end %>
		
	<%= render "devise/shared/links" %>
</div>
