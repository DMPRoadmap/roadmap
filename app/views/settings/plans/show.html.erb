<h1><%= _('Settings - My plans') -%></h1>
<p><%= _("The table below lists the available columns that can be shown on the 'My plans' list. Choose which you would like to appear.") -%></p>

<% @settings.errors.full_messages.each do |error| %>
  <div class="error"><%= error %></div>
<% end %>

<%= form_for(@settings, url: settings_plans_path, method: :put, as: :columns) do |f| %>
  <%= f.hidden_field(:name, value: true) %>
 
  <table class="dmp_table">
    <thead>
      <tr>
        <th>
        <%= label_tag("columns[name]", _('Name')) -%></th>
        <% @all_columns.each do |column| %>
          <th><%= label_tag("columns[#{column}]", t("helpers.project.columns.#{column}")) -%></th>
        <% end %>
        <th><%= label_tag("columns[select]", _('Select an action')) -%></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
        
        <%= check_box_tag("columns[name]", true, true, disabled: true) -%></td>
        <%
           @all_columns.each do |column|
             checked = @selected_columns.member?(column)
        %>
          <td><%= check_box_tag("columns[#{column}]", true, checked) -%></td>
        <% end %>
        <td><%= check_box_tag("columns[select]", true, true, disabled: true) -%></td>
      </tr>
    </tbody>
    <tfoot>
      <tr>
        <td><%= submit_tag(_('Save'), class: "btn btn-primary") -%></td>
        <td><%= link_to(_('Cancel'), projects_path, class: "btn btn-primary") -%></td>
        </tr>
    </tfoot>
  </table>
<% end %>
