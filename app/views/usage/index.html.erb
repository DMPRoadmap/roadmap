<% title _('Usage statistics') %>

<div class="row">
  <div class="col-md-12" >
    <h1>Usage statistics</h1>
  </div>
</div>

<%= render partial: 'usage/total_usage',
           locals: { user_count: @total_org_users,
                     plan_count: @total_org_plans,
                     separators: @separators } %>


<div class="panel-group usage-accordion" role="tablist" aria-multiselectable="true">
  <%= render partial: 'usage/template_statistics', locals: {expanded: @funder.present?} %>
  <%= render partial: 'usage/user_statistics', locals: {expanded: !@funder.present?} %>
</div>


<%= render partial: 'usage/filter' %>
