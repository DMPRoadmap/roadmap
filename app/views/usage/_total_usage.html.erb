<%# locals: user_count, plan_count %>

<div class="row">
  <div class="col-md-12" >
    <div class="col-md-10">
      <h1>Usage statistics</h1>
    </div>
    <div class="col-xs-2">
      <%= link_to usage_global_statistics_path, class: 'stat btn btn-default', role: 'button', target: '_blank' do %>
        <%= _('Download global usage') %> <i class="fa fa-download" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
</div>
<div class="row mt-15 mb-15">
  <div class="col-md-12">
    <div class="col-xs-2">
      <i class="fa fa-users f-large"></i>
      <h4><%= user_count %> Total users</h4>
    </div>
    <div class="col-xs-10">
      <i class="fa fa-files-o f-large"></i>
      <h4><%= plan_count %> Total plans</h4>
    </div>
  </div>
</div>