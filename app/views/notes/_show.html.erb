<!-- local variables: note -->
<% if !note.nil? %>
    <% user = User.find(note.user_id) %>
    <ul class="list-unstyled">
        <li><%= raw note.text %></li>
        <li>
            <span class="label label-default">
                <%= "#{user.name} at #{l(note.updated_at, format: :custom)}" %>
            </span>
        </li>
    </ul>
<% end %>