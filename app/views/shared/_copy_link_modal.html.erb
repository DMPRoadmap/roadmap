<div id="link-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-header">
      <button class="close" type="button" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">
        <%= d_('dmpopidor', 'Copy link') %>
      </h4>
    </div>
    <div class="modal-body">
      <input type="text" id="link" readonly="readonly" style="width: 100%">
    </div>
    <div class="modal-footer">
      <button id="copy-link-btn" class="btn btn-default"><%= d_('dmpopidor', 'Copy link') %></button>
    </div>
  </div>
</div>
