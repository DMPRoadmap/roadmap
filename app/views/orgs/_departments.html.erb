<h3><%=_('Schools/Departments') %></h3>
<div class="row">
  <div id="departments_table" class="col-md-12">
    <%= paginable_renderise( partial: '/paginable/departments/index',
                             controller: 'paginable/departments',
                             action: 'index',
                             scope: departments,
                             query_params: { sort_field: 'departments.name', sort_direction: 'asc' }) %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <a href="<%= new_org_admin_department_path %>" class="btn btn-primary"><%= _('Create school/department') %></a>
  </div>
</div>
</div>