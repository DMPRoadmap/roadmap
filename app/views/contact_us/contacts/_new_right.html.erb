<!-- new_right template -->
<address>
  <strong><%= Rails.configuration.x.organisation.name %></strong><br>
  <% [Rails.configuration.x.organisation.address.fetch(:line1, ""),
      Rails.configuration.x.organisation.address.fetch(:line2, ""),
      Rails.configuration.x.organisation.address.fetch(:line3, ""),
      Rails.configuration.x.organisation.address.fetch(:line4, ""),
      Rails.configuration.x.organisation.address.fetch(:country, "")].compact.each do |addr_line| %>
<% if addr_line.present? %>
  <%= addr_line.is_a?(Array) ? addr_line.join(' ') : addr_line %><br>
<% end %>
<% end %>
</address>
<%
telephone=Rails.configuration.x.organisation.telephone
if telephone.present? %>
  <strong><%= "#{_('Helpline')} #{telephone}" %></strong>
<% end %>
<%
email=Rails.configuration.x.organisation.email
if email.present? %>
  <address>
    <strong><%= _('Email') %></strong>
      <a href="<%= "mailto:#{email}" %>"><%= email %></a>
    </address>
<% end %>
<%
link=Rails.configuration.x.organisation.google_maps_link
if link.present? %>
  <iframe
    width="90%"
    height="250"
    frameborder="0"
    scrolling="no"
    marginheight="0"
    marginwidth="0"
    src="<%= link %>">
  </iframe>
<% end %>
