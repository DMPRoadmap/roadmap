<% 
  # Override the default Rails route helper for the contact_us page IF an alternate contact_us url was defined
  # in the dmproadmap.rb initializer
  contact_us = Rails.configuration.x.organisation.contact_us_url || contact_us_path
%>

<!-- footer content -->
<div class="footer-content">
  <div class="footer-links-logos">
    <div class="footer-links">
      <span><a href="<%= about_us_path %>"><%= _('About') %></a></span>
      <span><a href="<%= terms_path %>"><%= _('Legal notice') %></a></a></span>
      <span><a href="<%= privacy_path %>"><%= _('Privacy policy') %></a></span>
      <span class="break-point">â€¢</span>
      <span>
        <a href="https://opidor.fr/category/dmp-faq/" title="DMPOPIDoR FAQ - <%= _("Opens in new window") %>" target="_blank">
          <%= _('FAQ') %>
        </a>
      </span>
      <span><a href="<%= news_feed_path %>"><%= _('News') %></a></span>
      <span><a href="<%= tutorials_path %>"><%= _('Tutorials') %></a></span>
      <!-- api docs -->
      <% if current_user.present? && current_user.can_use_api? %>
        <span><%= link_to _('API Docs'), rswag_ui_path, target: '_blank' %></span>
      <% end %>
      <span><a href="<%= contact_us %>"><%= _('Contact Us') %></a></a></span>
    </div>
    <div class="footer-logos">
      <span>
        <%= link_to("http://www.cnrs.fr/", title: _("CNRS website") + " - " + _("Opens in new window"), target: '_blank')  do %>
          <%= image_tag("cnrs.gif", alt: 'CNRS logo (opens in a new window)') %>
        <% end %>
      </span>
      <span>
        <%= link_to("https://github.com/DMPRoadmap/roadmap", title: "DMPRoadmap Github - " + _("Opens in new window"), target: '_blank')  do %>
          <%= image_tag("roadmap_logo_orange_white.png", alt: 'DMPRoadmap Github (opens in a new window)') %>
        <% end %>
      </span>
    </div>
  </div>

  <!-- footer application version, credits & socials networks links -->
  <div class="footer-infos-sn">
    <div class="footer-infos">
      <span>
        <%= link_to("#{Rails.configuration.x.organisation.url}", 
                    title: _("INIST website") + " - " + _("Opens in new window"), target: '_blank' ) do %>
          <%= sanitize("&copy; 2016 - #{Time.now.year} #{Rails.configuration.x.organisation.abbreviation}") %>
          <% end %>
      </span>
      <span class="break-point">â€¢</span>
      <span><%= Rails.configuration.x.application.version %></span>
    </div>
    <div class="footer-sn">
      <span>
        <a title="DMPOPIDoR Github - <%= _("Opens in new window") %>" target="_blank" href="<%= Rails.configuration.x.application.url %>" target="_blank">
          <i class="fab fa-github-alt"></i>
        </a>
      </span>
      <span>
        <a title="OPIDoR Twitter - <%= _("Opens in new window") %>" target="_blank" href="<%= Rails.configuration.x.application.twitter_url %>">
          <i class="fab fa-x-twitter"></i>
        </a>
      </span>
      <span>
        <a title="<%= _('Mailing list') %> - <%= _("Opens in new window") %>"  target="_blank" href="<%= Rails.configuration.x.application.user_group_subscription_url %>">
          <i class="fas fa-comments"></i>
        </a>
        </span>
    </div>
  </div>
  
</div>
