<%# locals: { question, answer, plan, dataset } %>
<%= form_for(Note.new, url: notes_path) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :question_id, value: question.id %>
  <%= f.hidden_field :answer_id, value: answer.id %>
  <%= f.hidden_field :plan_id, value: plan.id %>
  <%= f.hidden_field :dataset_id, value: dataset.id %>
  <div class="form-group">
    <%= f.label(:text, _('Add comments to share with collaborators')) %>
    <%= f.text_area(:text, class: 'form-control note', id: "note-#{question.id}-dataset-#{dataset.id}") %>
  </div>
  <div class="pull-right">
    <%= f.button(_('Save'), class: "btn btn-default", type: "submit") %>
  </div>
<% end %>