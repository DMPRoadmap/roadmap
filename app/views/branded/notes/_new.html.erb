<%# locals: { question, answer, plan, research_output } %>
<%= form_for(Note.new, url: notes_path) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id, id: nil %>
  <%= f.hidden_field :question_id, value: question.id, id: nil %>
  <%= f.hidden_field :answer_id, value: answer.id, id: nil %>
  <%= f.hidden_field :plan_id, value: plan.id, id: nil %>
  <%= f.hidden_field :research_output_id, value: research_output.id, id: nil %>
  <div class="form-group">
    <%= f.label(:text, _('Add comments to share with collaborators')) %>
    <%= f.text_area(:text, class: 'form-control note', id: "note-#{question.id}-research-output-#{research_output.id}",
                    spellcheck: true) %>
  </div>
  <div class="pull-right">
    <%= f.button(_('Save'), class: "btn btn-default", type: "submit") %>
  </div>
<% end %>
