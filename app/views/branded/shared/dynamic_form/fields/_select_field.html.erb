<%# locals: { f, field_label, field_name, select_values, locale, selected_value, field_class, readonly, multiple, validation, ttip } %>
<% field_label = field_label || 'No label defined' %>
<div class="col-md-12">
    <%= f.label field_name, field_label, class: 'control-label' %>
</div>
<div class="col-md-12 dynamic-field">
    <%= select_tag field_name,
                options_for_select(
                    select_values.map {|v| [ v.to_s(locale), v.id ] },
                    selected: selected_value
                ),
                disabled: readonly,
                multiple: multiple,
                "data-toggle": "tooltip",
                title: ttip,
                class: "form-control #{field_class}" %>
    <%= render partial: "shared/dynamic_form/validation_indicator", locals: {
                    validation: validation
        } unless validation == "none"
    %>
</div>