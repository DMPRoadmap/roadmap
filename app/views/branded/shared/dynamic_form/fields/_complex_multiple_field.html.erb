<%# locals: { field_values, parent_id, schema, field_name, template_locale } %>
<% ttip = nil %>
<% field_values = [] if field_values.nil? %>
<% field_label = field_label || 'No label defined' %>
<div class="col-md-12">
  <fieldset class="answer-fieldset">
    <legend class="answer-fieldset"><%= field_label.capitalize.pluralize(2) %></legend>
    <table class="table table-hover linked-fragments-list <%= schema.classname %>-list">
      <thead>
        <tr><th scope="col"><%= field_label.capitalize %></th><th scope="col">Actions</th></tr>
      </thead>
      <tbody>
        <%= render(partial: 'shared/dynamic_form/linked_fragment/list', locals: {
              obj_list: field_values, 
              parent_id: parent_id,
              schema: schema,
              readonly: readonly,
              template_locale: template_locale
              }
            ) %>
      </tbody>
    </table>
    <% unless parent_id.nil? || readonly %>
      <%= link_to 'Create', new_edit_linked_madmp_fragments_url(
              nil, 
              :parent_id => parent_id, 
              :schema_id => schema.id, 
              :template_locale => template_locale
      ),  {
        :remote => true, 
        :class => "btn btn-primary",
        'data-toggle' =>  "modal", 
        'data-target' => '#modal-window'
      }  %>
    <% end %>
  </fieldset>
</div>