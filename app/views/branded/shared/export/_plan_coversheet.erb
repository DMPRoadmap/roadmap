<% 
  plan_fragment = @plan.json_fragment
  contributors = plan_fragment.contributors
  costs = Fragment::Cost.where(dmp_id: plan_fragment.id)
  locale = @plan.template.locale
  template = @plan.template 
  template_title = template.title
  template_title += " - #{d_('dmpopidor', 'Customized')}" if template.customization_of.present?
%>
<hr />
<h1><%= @plan.title %></h1>
<em>
  <%= d_("dmpopidor", "A Data Management Plan created using %{application_name}, based on the \"%{template_title}\" template provided by %{org_name}.") % {
      application_name:  Rails.configuration.branding[:application][:name],
      template_title: template_title,
      org_name: template.org.name
    } %>
</em>
<br/>
<div class="cover-page">
  <h2><%= d_("dmpopidor", "Plan Details") %></h2>
  <div class="plan-details">
    <%= render(partial: 'shared/export/display_madmp_fragment', locals: {
            fragment: plan_fragment.meta,
            schema: plan_fragment.meta.madmp_schema,
            classname: plan_fragment.meta.classname,
            locale: locale,
            table_header: nil
    } ) %>
  </div>

  <h2><%= _("Project Details") %></h2>
  <div class="plan-details">
    <%= render(partial: 'shared/export/display_madmp_fragment', locals: {
            fragment: plan_fragment.project,
            schema: plan_fragment.project.madmp_schema,
            classname: plan_fragment.meta.classname,
            locale: locale,
            table_header: nil
    } ) %>
  </div>

  <p><b><%= d_('dmpopidor', "Research outputs") %> : </b></p>
  <ol>
    <% plan_fragment.research_outputs.each do |research_output| %>
      <% research_output_description = research_output.research_output_description %>
      <li>
        <%= research_output_description.data['title'] %>
        <% if research_output_description.data['type'].present? %>
          (<%= research_output_description.data['type'] %>)
        <% end %>
      </li>
    <% end %>
  </ol>
  <br/>
  <p><b><%= _("Contributors") %></b></p> <br/>
  <table class="real-table">
    <thead>
      <tr>
        <th><%= _("Contributors") %></th>
        <th><%= _("Affiliation") %></th>
        <th><%= _("Roles") %></th>
      </tr>
    </thead>
    <tbody>
    <% contributors.each do |contributor| %>
      <tr>
        <td><%= contributor.to_s %></td>
        <td><%= contributor.data["affiliationName"] %></td>
        <td>
          <ul>
            <% contributor.roles.each do |role| %>
              <li><%= role %></li>
            <% end %>
          </ul>  
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% if @plan.template.structured? && !costs.empty?%>
    <br/>
    <p><b><%= _("Budget") %></b></p> <br/>
    <table class="real-table">
      <thead>
        <tr>
          <th scope="col"><%= d_("dmpopidor", "Cost type (Title)") %></th>
          <th scope="col" class="sorter-false"><%= d_("dmpopidor", "Amount") %></th>
          <th scope="col" class="sorter-false"><%= d_("dmpopidor", "Lifecycle stage") %></th>
        </tr>
      </thead>
      <tbody>
      <% costs.each do |cost| %>
        <% ro = ResearchOutput.find(cost.research_output_id)%>
        <% cost_label = form_label(cost.parent.madmp_schema.schema["properties"]["cost"], @plan.template.locale, false) %>
        <% cost_title = cost.data["costType"] %>
        <% cost_title +=  " (#{cost.data["title"]})" if cost.data["title"].present?%>
        <tr>
          <td><%=  cost_title %></td>
          <td><%= "#{cost.data["amount"]} #{cost.data["currency"]}"%></td>
          <% if @plan.research_outputs.length > 1 %>
            <td><%= "#{cost_label} - " %><b><%= ro.abbreviation %></b></td>
          <% else %>
            <td><%= cost_label %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>

  <% if @public_plan %>
    <p><%= _("Copyright information:") %></p>
    <div style="margin-left: 15px;">
      <p>
        <%= _(" The above plan creator(s) have agreed that others may use as much of the text of this plan as they would like in their own plans, and customise it as necessary. You do not need to credit the creator(s) as the source of the language used, but using any of the plan's text does not imply that the creator(s) endorse, or have any relationship to, your project or proposal") %>
      </p>
    </div>
  <% end %>
</div>
<hr class="bottom" />
