$(() => {
  $('#modal-window').html('<%= escape_javascript(render "plans/plan_details/linked_fragment_modal") %>');
  $('#modal-window').modal();


  $('#madmp_fragment_form').bind('ajax:success', (event, response) => {
    $(`.project-details.${response.type}-list`).html(response.html);
    $('#modal-window').modal('hide');
  }).bind('ajax:error', () => {
    console.log('ajax:error');
  });
});
