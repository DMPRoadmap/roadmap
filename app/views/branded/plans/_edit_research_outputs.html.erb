<%# locals: { plan, research_outputs, research_output_types } %>
<div class="research-outputs-description">
  <h2 class="project-details"><%= d_('dmpopidor', 'Research outputs') %></h2>
  <div class="display-readonly-textarea-content">
    <a href="<%= research_output_types_path %>" target="_blank" >
      <%= d_('dmpopidor', 'Click here to find out more about research output types.') %>
    </a>
  </div>
  <%= form_for plan, html: {method: :put, class: 'form-horizontal edit_plan' } do |f| %>
    <div id='research-outputs'>
      <% @research_outputs.each do |research_output|%>
        <%= f.fields_for :research_outputs, research_output do |d| %>
          <%= render 'plans/research_output_fields', f: d, plan: plan, 
                    research_output: research_output, research_output_types: research_output_types %>
        <% end %>
      <% end %>
    </div>
    <div class='links'>
      <span id="add-research-output", class="btn btn-link"><%= d_('dmpopidor', 'Add a research output') %></span>
    </div>
    <%= f.button(_('Submit'), class: "btn btn-default", type: "submit") %>
  <% end %>
</div>