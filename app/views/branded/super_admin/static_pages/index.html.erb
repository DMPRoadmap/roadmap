<div class="row">
  <div class="col-xs-12">
    <h2><%= d_('dmpopidor', 'Static pages') %></h2>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="pull-right">
      <%= link_to d_('dmpopidor', '+ Add New Static page'), new_super_admin_static_page_path, class: 'btn btn-default', role: 'button' %>
    </div>
    <div class="table-responsive">
      <%= paginable_renderise(
        partial: '/paginable/static_pages/index',
        controller: 'paginable/static_pages',
        action: 'index',
        scope: static_pages,
        query_params: { sort_field: 'static_pages.name', sort_direction: 'desc' }
      ) %>
    </div>
  </div>
</div>