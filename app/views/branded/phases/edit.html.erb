<% title "#{plan.title} - Write plan" %>
<div class="row">
  <div class="col-md-12">
    <h1><%= plan.title %></h1> 
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if Dataset.table_exists? %>
      <%= render partial: 'phases/edit_plan_answers_datasets',
               layout: 'plans/navigation',
               locals: {
                 plan: plan,
                 phase: phase,
                 answers: answers,
                 readonly: readonly,
                 base_template_org: base_template_org,
                 guidance_presenter: guidance_presenter,
               } %>
    <% else %>
      <%= render partial: 'phases/edit_plan_answers',
               layout: 'plans/navigation',
               locals: {
                 plan: plan,
                 phase: phase,
                 answers: answers,
                 readonly: readonly,
                 base_template_org: base_template_org,
                 guidance_presenter: guidance_presenter,
               } %>
    <% end %>
  </div>
</div>