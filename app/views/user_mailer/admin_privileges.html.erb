<p><%= _('Hello %{user_name}') % { user_name: @user.name(false) } %></p>

<% if @user.perms.any? %>

  <p>
    <%= _('You have been granted administrator privileges in %{tool_name}:') % {
      tool_name: tool_name
    } %>
  </p>

  <p>
    <ul>
      <% for perm in @user.perms %>
        <li><%= Perm::NAME_AND_TEXT[perm.name.to_sym] %></li>
      <% end %>
    </ul>
  </p>

<% else %>

  <p>
    <%= _('You have been revoked administrator privileges in %{tool_name}.') % {
      tool_name: tool_name
    } %>
  </p>

<% end %>

<p>
  <%= sanitize _('More information about administering the %{tool_name} for users at your organisation is available at the %{help_url}.') % {
    tool_name: tool_name,
    help_url: link_to('help for administrators page', help_url)
  } %>
</p>

<%= render partial: 'email_signature' %>
