{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "DataReuseStandard",
    "description": "DataReuseStandard template",
    "type": "object",
    "class": "DataReuseStandard",
    "properties": {
        "justification": {
            "type": "string",
            "description": "Justification de la réutilisation ou non réutilisation de données existantes",
            "inputType": "textarea",
            "label@fr_FR": "Justification",
            "label@en_GB": "Justification",
            "tooltip@fr_FR": "Indiquer comment elles seront intégrées au projet",
            "tooltip@en_GB": "Indicate how they will be integrated into the project"
        },
        "reusedData": {
            "type": "array",
            "table_header": null,
            "items": {
                "type": "object",
                "class": "ReusedDataBasic",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "template_name": "ReusedDataStandard",
                "required": [
                    "dbid"
                ]
            },
            "description": "Jeu de données réutilisé",
            "label@fr_FR": "Produits de recherche réutilisés",
            "label@en_GB": "Reused research outputs"
        },
        "cost": {
            "type": "array",
            "table_header@fr_FR": "Type de coût : montant",
            "table_header@en_GB": "Cost type: amount",
            "items": {
                "type": "object",
                "class": "CostBasic",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "template_name": "CostStandard",
                "required": [
                    "dbid"
                ]
            },
            "description": "Coûts éventuels liés à l'achat de données",
            "label@fr_FR": "Coûts",
            "label@en_GB": "costs"
        }
    },
    "required": [
        "justification"
    ],
    "to_string": []
}