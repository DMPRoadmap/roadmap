{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "GeoSpatialData",
    "description": "GeoSpatialData template",
    "type": "object",
    "class": "GeoSpatialData",
    "properties": {
        "areaName": {
            "type": "string",
            "description": "Couverture géographique : Pays / Etat / Région / Département / Commune ??",
            "inputType": "dropdown",
            "label@fr_FR": "Pays/Région/Département/Commune ??",
            "label@en_GB": "Country/Province/Department/City ??",
            "registry_name": "GeoNames"
        },
        "geographicBoundingBox": {
            "type": "object",
            "class": "SpecificData",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "template_name": "GeographicBoundingBox",
            "required": [
                "dbid"
            ],
            "description": "Étendue de la ressource dans l’espace géographique, exprimée sous la forme d’un rectangle de délimitation",
            "label@fr_FR": "Rectangle de délimitation géographique",
            "label@en_GB": "Geographic bounding box"
        },
        "epsgCode": {
            "type": "string",
            "description": "Code EPSG (European Petroleum Survey Groups)",
            "label@fr_FR": "Code EPSG",
            "label@en_GB": "EPSG Code",
            "tooltip@fr_FR": "Saisir le code EPSG (European Petroleum Survey Group), https://epsg.org",
            "tooltip@en_GB": "Enter the EPSG code (European Petroleum Survey Group), https://epsg.org",
            "example@fr_FR": "4258",
            "example@en_GB": "4258"
        },
        "temporalElement": {
            "type": "object",
            "class": "SpecificData",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "template_name": "TemporalElement",
            "required": [
                "dbid"
            ],
            "description": "Période de temps couverte par le contenu de la ressource",
            "label@fr_FR": "Etendue temporelle",
            "label@en_GB": "Temporal Element"
        },
        "lineage": {
            "type": "string",
            "description": "Historique du traitement et/ou de la qualité générale de la série de données géographiques",
            "inputType": "textarea",
            "label@fr_FR": "Généalogie",
            "label@en_GB": "Lineage Statement",
            "example@fr_FR": "Mise au standard Cartorisque des fichiers MapInfo de la Préfecture de police de Paris utilisés pour la fabrication des annexes du PPRI de Paris, transmis à la DPPR",
            "example@en_GB": "to translate"
        },
        "spatialResolution": {
            "type": "string",
            "description": "Décrit le niveau de détail de la ressource",
            "label@fr_FR": "Résolution indiquée en échelle ou en taille de pixels (mètres)",
            "label@en_GB": "Resolution shown in scale or pixel size (meters)",
            "example@fr_FR": "1/5000 ou 50 (m)",
            "example@en_GB": "1/5000 ou 50 (m)"
        },
        "spatialRepresentationType": {
            "type": "string",
            "description": "Méthode utilisée pour représenter géographiquement des informations localisées",
            "inputType": "dropdown",
            "label@fr_FR": "Type de représentation spatiale",
            "label@en_GB": "Spatial representation type",
            "registry_name": "SpatialRepresentationTypes"
        },
        "useRestrictions": {
            "type": "string",
            "description": "Restrictions d'accès au public au sens de la directive INSPIRE",
            "inputType": "dropdown",
            "label@fr_FR": "Restriction d'accés au public",
            "label@en_GB": "Public access restrictions",
            "registry_name": "UseRestrictions"
        },
        "useLimitations": {
            "type": "string",
            "description": "Conditions applicables à l’accès et à l’utilisation des séries et des services de données géographiques, et, le cas échéant, les frais correspondants",
            "label@fr_FR": "Conditions applicables à l'utilisation et à l'utilisation de la resource",
            "label@en_GB": "Conditions applicable to access and use"
        },
        "status": {
            "type": "string",
            "description": "??",
            "inputType": "dropdown",
            "label@fr_FR": "Statut",
            "label@en_GB": "Status",
            "registry_name": "StatusGeoSpatialData"
        },
        "maintenanceFrequency": {
            "type": "string",
            "description": "Fréquence de la maintenance",
            "inputType": "dropdown",
            "label@fr_FR": "Fréquence de la maintenance",
            "label@en_GB": "Maintenance frequency",
            "registry_name": "MaintenanceFrequency"
        },
        "isoPresentationForm": {
            "type": "string",
            "description": "??",
            "inputType": "dropdown",
            "label@fr_FR": "isoPresentationForm",
            "label@en_GB": "isoPresentationForm",
            "registry_name": "IsoPresentationForm"
        },
        "inputImageName": {
            "type": "string",
            "description": "??",
            "label@fr_FR": "inputImageName",
            "label@en_GB": "inputImageName"
        },
        "inputImageDescription": {
            "type": "string",
            "description": "??",
            "label@fr_FR": "Description de l'image",
            "label@en_GB": "Image description"
        },
        "datasetFormat": {
            "type": "string",
            "description": "??",
            "inputType": "dropdown",
            "label@fr_FR": "Format",
            "label@en_GB": "Format",
            "registry_name": "GeoSpatialDataFormat"
        },
        "datasetFormatVersion": {
            "type": "string",
            "description": "Version de ??",
            "label@fr_FR": "Version du format",
            "label@en_GB": "Version format"
        }
    },
    "required": [
        "areaName",
        "geographicBoundingBox",
        "epsgCode",
        "temporalElement",
        "lineage",
        "spatialResolution",
        "spatialRepresentationType"
    ],
    "to_string": []
}