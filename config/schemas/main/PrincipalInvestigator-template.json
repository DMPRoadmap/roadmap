{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "PrincipalInvestigator",
    "description": "PrincipalInvestigator template",
    "type": "object",
    "class": "PrincipalInvestigator",
    "properties": {
        "person": {
            "type": "object",
            "class": "Person",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "template_name": "PersonStandard",
            "required": [
                "dbid"
            ],
            "description": "Personnes impliquées dans la production et gestion des données",
            "inputType": "pickOrCreate",
            "label@fr_FR": "Sélectionner une valeur dans la liste déroulante",
            "label@en_GB": "Select a person from the drop-down list"
        },
        "role": {
            "type": "string",
            "description": "Rôle d'une personne dans la gestion et production des données",
            "label@fr_FR": "Rôle",
            "label@en_GB": "Role",
            "const@fr_FR": "Coordinateur du projet",
            "const@en_GB": "Project coordinator"
        }
    },
    "required": [
        "person",
        "role"
    ],
    "to_string": [
        "$.person.firstName",
        " ",
        "$.person.lastName ",
        "(",
        "$.role",
        ")"
    ]
}