{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "Cost",
    "description": "Cost schema",
    "type":"object",
    "properties": {
        "title":{
            "label": "Title",
            "type":"string",
            "pattern":"(.)*((@en)|(@fr))"
        },
        "description":{
            "label": "Description",
            "type":"string",
            "pattern":"(.)*((@en)|(@fr))"
        },
        "costType": {
            "label": "Cost type",
            "type": "string",
            "format": "select",
            "values": ["Human resource", "Training", "Software","Hardware", "other"]
        },
        "costValue":{
            "label": "Cost value",
            "type": "object",
            "classname": "cost_value",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "required": ["dbid"]
        }
    },
    "required": ["title", "costValue", "costType"]
}