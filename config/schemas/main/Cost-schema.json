{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "Cost",
    "description": "Cost schema",
    "type":"object",
    "properties": {
        "title":{
            "label@fr_FR": "titre",
            "label@en_GB": "Title",
            "type":"string"
            
        },
        "description":{
            "label@fr_FR": "Description",
            "label@en_GB": "Description",
            "type":"string"
            
        },
        "costType": {
            "label@fr_FR": "type de coût",
            "label@en_GB": "Cost type",
            "type": "string",
            "format": "select",
            "values@fr_FR" :["Ressources humaines", "Formation", "Logiciel", "Matériel informatique", "Autre" ],
            "values@en_GB": ["Human resource", "Training", "Software","Hardware", "other"]
        },
        "costValue":{
            "label@fr_FR": "Valeur du coût",
            "label@en_GB": "Cost value",
            "type": "object",
            "classname": "cost_value",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "required": ["dbid"]
        }
    },
    "required": ["title", "costValue", "costType"]
}