{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "../Documentation/Implementation/Data_model/JSON/technicalResourceUsage.json",
    "title": "Technical resource usage schema",
    "description": "Schema describing the usage of technical resources",
    "type":"object",
    "properties":{
        "facility": {
            "label@fr_FR": "Service",
            "label@en_GB": "Facility",
            "type":"object",
            "classname": "technical_resource",
           "properties": {
                "dbid": {
                    "type": "number",
                    "description": "Internal identifier pointing to a technicalResource Json document"
                }
            },
            "required": ["dbid"]    
        },
        "startDate":{
            "label@fr_FR": "Date de début",
            "label@en_GB": "Start date",
            "type":"string",
            "format":"date"
        },
        "endDate":{
            "label@fr_FR": "Date de fin",
            "label@en_GB": "End date",
            "type":"string",
            "format":"date"
        },
        "dataSize":{
            "label@fr_FR": "Taille des données",
            "label@en_GB": "Data size",
            "type": "number",
            "description": "Volume expressed in octets"
        },
        "storageType":{
            "label@fr_FR": "Support de stockage",
            "label@en_GB": "Storage type",
            "type": "array",
            "items": {
                "type": "string"
            },
            "inputType": "dropdown",
            "values@fr_FR": ["Disque dur", "Disque statique à semi-conducteurs","Clé USB", "Serveur NAS", "cloud", "CD", "DVD", "Bande magnétique", "Autre"],
            "values@en_GB": ["Hard disk drive", "Solid state drive","USB key", "NAS server", "cloud", "CD", "DVD", "Magnetic tape", "Other"]
        },
        "backupPolicy":{
            "label@fr_FR": "Politique de sauvegarde",
            "label@en_GB": "Backup policy",
            "type": "object",
            "classname": "backup_policy",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "required": ["dbid"]
        },
        "staffMember": {
            "label@fr_FR": "Personne contact",
            "label@en_GB": "Contact personne",
            "type": "array",
            "items": {
                "type": "object",
                "classname": "staff_member",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        },
        "cost": {
            "label@fr_FR": "Coût",
            "label@en_GB": "Cost",
            "toolTip@fr_FR": "Coût lié à l'usage d'une resource extérieure",
            "toolTip@en_GB": "Cost linked to the resource usage extérieure",
            "type": "array",
            "items": {
                "type": "object",
                "classname": "cost",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        }
        
    },
    "required":["facility", "dataSize", "startDate", "endDate"]   
 }
