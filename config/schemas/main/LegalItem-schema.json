{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Legal items",
    "description": " intellectual rights, confidentiality issues, ownership aspects, applicable laws",
    "type": "object",
    "properties": {
        "title": {
            "label": "Title",
            "type": "string",
            "pattern": "(.)*((@en)|(@fr))"
        },
        "description": {
            "label": "Description",
            "type": "string",
            "pattern": "(.)*((@en)|(@fr))"
        },
        "legalDocUrl": {
            "label": "Legal document URL",
            "type": "string",
            "format": "uri"
        }
    },
    "required": [
        "title"
    ]
}