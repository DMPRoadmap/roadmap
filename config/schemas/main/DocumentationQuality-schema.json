{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/JSON/",
    "title": "Documentation and data quality issues",
    "description": "Schema to describe documentation and data quality issues",
    "type":"object",
    "properties": {
        "dataOrganization":{
            "label@fr_FR": "Organisation des données",
            "label@en_GB": "Data Organization",
            "type":"array",
            "minItems": 1,
            "items":{
                "type": "object",
                "schema_id":6,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": ["dbid"]
            }
        },
        "metadataStandards":{
            "label@fr_FR": "Standards de métadonnées",
            "label@en_GB": "Metadata Standards",
            "type":"array",
            "minItems": 1,
            "items":{
                "type":"object",
                "schema_id":18,
                "properties":{
                    "dbid":{
                        "type":"number"
                    }
                },
                "required":["dbid"]
                
            }
        },
        "documentationSoftware":{
            "label@fr_FR": "Logiciel de documentation",
            "label@en_GB": "Documentation software",
            "type":"string",
            "toolTip@fr_FR": "Logiciel utilisé pour enregistrer les métadonnées ou la description des études",
            "toolTip@en_GB": "Tool used to capture metadata or record research studies",
            "example":"Morpho, Metacat, OMERO, SEEKS, DdiEditor, ..."
        },
        "qualityAssuranceMethod":{
            "label@fr_FR": "Méthode assurance qualité",
            "label@en_GB": "Quality assurance method",
            "type":"array",
            "minItems" : 1,
            "items":{
                "type": "object",
                "schema_id": 24,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": ["dbid"]
            },
            "description":"description of the methods used to assure the scientific quality of the data (eg. repeated samples, calibration, repeated measurements, standardized data capture, ..."
        },
        "staffMember":{
            "label@fr_FR": "Personne en charge de la documentation des données",
            "label@en_GB": "Person in charge of data documentation",
            "type":"array",
            "items": {
                "type": "object",
                "schema_id": 27,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        },      
        "cost": {
            "label@fr_FR": "Coût lié à la documentation",
            "label@en_GB": "Documentation related cost",
            "type": "array",
            "items": {
                "type": "object",
                "schema_id": 3,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        }        
    },
    "required":["dataOrganization","metadataStandard","qualityAssuranceMethod", "staffMember"]
}
