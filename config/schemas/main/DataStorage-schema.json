{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/JSON/",
  
    "title": "Data storage",
    "description": "Schema describing data storage",
    "type":"object",
    "properties":{
        "title":{
            "label@fr_FR": "Titre",
            "label@en_GB": "Title",
            "type":"string"
            },
        "description":{
            "label@fr_FR": "Description",
            "label@en_GB": "Description",
            "type": "string",
            "toolTip@fr_FR": "Description du stockage des données",
            "toolTip@en_GB": "Description of data storage"
            },
        "storage":{
            "label@fr_FR": "Stockage par une ressource extérieure",
            "label@en_GB": "Storage by an external resource",
            "type":"object",
            "classname": "technical_resource_usage",
            "properties":{
                "dbid":{
                    "type":"number"
                    }
             },
             "required":["dbid"]
        },
        "securityMeasures":{
            "label@fr_FR": "Mesures de sécurité",
            "label@en_GB": "Security measures",
            "type":"string"
        },
        "backupPolicy":{
            "label@fr_FR": "Politique de sauvegarde",
            "label@en_GB": "Backup policy",
            "type": "object",
            "classname":"backup_policy",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "required": ["dbid"]
        },
        "staffMember":{
            "label@fr_FR": "Personne en charge du stockage",
            "label@en_GB": "Person in charge of storage",
            "type":"array",
            "items": {
                "type": "object",
                "classname": "staff_member",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        },        
        "cost": {
            "label@fr_FR": "Coût de stockage",
            "label@en_GB": "Coût de stockage",
            "type": "array",
            "items": {
                "type": "object",
                "classname": "cost",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        }        
    },
    "required":["title", "description"]
}
      

