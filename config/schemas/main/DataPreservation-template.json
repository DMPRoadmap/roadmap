{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "DataPreservation",
    "description": "DataPreservation template",
    "type": "object",
    "extensible": 1,
    "properties": {
        "description": {
            "type": "string",
            "description": "Description des ontraintes réglementaires à prendre en compte pour la conservation des données",
            "inputType": "textarea",
            "label@fr_FR": "Description",
            "label@en_GB": "Description"
        },
        "dataSize": {
            "type": "number",
            "description": "Volume des données concernées en octets",
            "label@fr_FR": "Taille des données",
            "label@en_GB": "Data size"
        },
        "startDate": {
            "type": "string",
            "format": "date",
            "description": "Début de conservation",
            "label@fr_FR": "Date de début",
            "label@en_GB": "Start date"
        },
        "endDate": {
            "type": "string",
            "format": "date",
            "description": "Fin de conservation",
            "label@fr_FR": "Date de fin",
            "label@en_GB": "End date"
        },
        "preservation": {
            "type": "object",
            "class": "technical_resource_usage",
            "extensible": 1,
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "schema_id": 17,
            "required": [
                "dbid"
            ],
            "description": "Usage d'une ressource technique pour conserver les données à number terme",
            "label@fr_FR": "Préservation",
            "label@en_GB": "Preservation"
        },
        "finalDisposition": {
            "type": "string",
            "description": "Sort final des données (destruction, pronumberation de la conservation, …)",
            "label@fr_FR": "Dispositions finales",
            "label@en_GB": "Final disposition"
        },
        "contributors": {
            "type": "array",
            "items": {
                "type": "object",
                "class": "contributor",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "schema_id": 8,
                "required": [
                    "dbid"
                ]
            },
            "description": "Personne(s) en charge de la conservation à number term des données"
        },
        "cost": {
            "type": "array",
            "items": {
                "type": "object",
                "class": "cost",
                "extensible": 1,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "schema_id": 5,
                "required": [
                    "dbid"
                ]
            },
            "description": "Coût(s) lié(s) à la conservation à number terme des données",
            "label@fr_FR": "Coût",
            "label@en_GB": "Cost"
        }
    },
    "required": [
        "dataSize",
        "startDate",
        "endDate",
        "finalDisposition"
    ],
    "to_string": [
        "DataPreservation: to_string not defined"
    ]
}