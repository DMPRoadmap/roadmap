{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "CostStandard",
    "description": "CostStandard template",
    "type": "object",
    "extensible": 1,
    "properties": {
        "title": {
            "type": "string",
            "description": "Libellé du coût",
            "label@fr_FR": "Titre",
            "label@en_GB": "Title"
        },
        "description": {
            "type": "string",
            "description": "Description/justificatif des coûts",
            "inputType": "textarea",
            "label@fr_FR": "Description",
            "label@en_GB": "Description"
        },
        "costType": {
            "type": "string",
            "description": "Type de coût engagé",
            "inputType": "dropdown",
            "label@fr_FR": "type de coût",
            "label@en_GB": "Cost type",
            "values@en_GB": [
                "Human resource",
                "Training",
                "Software",
                "Hardware",
                "other"
            ],
            "values@fr_FR": [
                "Ressources humaines",
                "Formation",
                "Logiciel",
                "Matériel informatique",
                "Autre"
            ],
            "overridable": true
        },
        "costValue": {
            "type": "object",
            "class": "CostValue",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "template_name": "CostValueStandard",
            "required": [
                "dbid"
            ],
            "description": "Montant du coût",
            "label@fr_FR": "Valeur du coût",
            "label@en_GB": "Cost value"
        }
    },
    "required": [
        "title",
        "costType",
        "costValue"
    ],
    "to_string": [
        "CostStandard: to_string not defined"
    ]
}