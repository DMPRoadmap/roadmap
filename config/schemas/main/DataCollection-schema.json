{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "Data collection",
    "description": "Data collection schema",
    "type": "object",
    "properties": {
        "title": {
            "label@fr_FR": "Titre",
            "label@en_GB": "Title",
            "type": "string",
            "toolTip@fr_FR": "titre d'une méthode (ou étape) de collecte",
            "toolTip@en_GB": "Title of a data collection method (or step)",
            "example": "Foobar"
        },
        "description": {
            "label@fr_FR": "Description",
            "label@en_GB": "Description",
            "type": "string",
            "toolTip@fr_FR": "Description de la méthodologie de collecte",
            "toolTip@en_GB": "Description of the data collection methodology"
        },
        "dataNature": {
            "label@fr_FR": "Nature des données",
            "label@en_GB": "Data Nature",
            "type": "string",
            "format": "select",
            "values@fr_FR": [
                "Observation",
                "Données expérimentales",
                "Simulation",
                "Modèle",
                "Autre"
            ],
            "values@en_GB": [
                "Observation",
                "Experimental data",
                "Simulation",
                "Model",
                "other"
            ]
        },
        "acquisition": {
            "label@fr_FR": "Acquisition",
            "label@en_GB": "Acquisition",
            "type": "object",
            "schema_id": 29,
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "required": [
                "dbid"
            ]
        },
        "methodsUrl": {
            "label@fr_FR": "Methods URL",
            "label@en_GB": "Url de la méthode",
            "type": "string",
            "format": "uri"
        },
        "staffMember": {
            "label@fr_FR": "Contributeur(s)",
            "label@en_GB": "Contributor(s)",
            "type": "array",
            "items": {
                "type": "object",
                "schema_id": 27,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        },
        "cost": {
            "label@fr_FR": "Coût d'acquisition",
            "label@en_GB": "Acquisition cost",
            "type": "array",
            "items": {
                "type": "object",
                "schema_id": 3,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        }
    },
    "required": [
        "description",
        "dataNature"
    ]
}