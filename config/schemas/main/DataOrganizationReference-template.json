{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "DataOrganizationReference",
    "description": "DataOrganizationReference template",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "description": "Intitulé de l'aspect organisationnel",
            "label@fr_FR": "Titre",
            "label@en_GB": "Title"
        },
        "documentIdentifier": {
            "type": "string",
            "description": "Identification du document associé à cet aspect organisationnel",
            "label@fr_FR": "Identifiant du document",
            "label@en_GB": "Document identifier"
        },
        "idType": {
            "type": "string",
            "description": "Type d'identifiant ressource",
            "inputType": "dropdown",
            "label@fr_FR": "Type d'identifiant de la ressource",
            "label@en_GB": "Identifier type",
            "values@fr_FR": [
                "DOI",
                "ARK",
                "Handle",
                "IGSN",
                "URL",
                "Autre"
            ],
            "values@en_GB": [
                "DOI",
                "ARK",
                "Handle",
                "IGSN",
                "URL",
                "Other"
            ],
            "overridable": true,
            "substitutable": true
        }
    },
    "required": [
        "title",
        "documentIdentifier",
        "idType"
    ],
    "to_string": [
        "$.title"
    ]
}