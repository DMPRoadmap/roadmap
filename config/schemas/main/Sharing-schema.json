{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "Sharing",
    "description": "Schema describing sharing issues",
    "type": "object",
    "properties": {
        "description": {
            "label@fr_FR": "Description",
            "label@en_GB": "Description",
            "type": "string",
            "toolTip@fr_FR": "Conditions de partage et/arguments soutenant le fait que les données ne peuvent être ouvertes",
            "toolTip@en_GB": "sharing conditions and/or arguments explaining why data cannot be openly shared"
        },
        "reusability": {
            "label@fr_FR": "Potentiel de réutilisation",
            "label@en_GB": "Reusability",
            "type": "string",
            "toolTip@fr_FR": "Potentiel et/ou limite de réutilisation",
            "toolTip@en_GB": "Potential and/or limits of data resusability "
        },
        "hosting": {
            "label@fr_FR": "Hébergement",
            "label@en_GB": "Hosting",
            "type": "object",
            "classname": "technical_resource_usage",
            "schema_id": 33,
            "description": "Internal identifier pointing to a technicalResourceUsage JSON document",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "required": [
                "dbid"
            ]
        },
        "distribution": {
            "label@fr_FR": "Distribution",
            "label@en_GB": "Distribution",
            "toolTip@fr_FR": "Un ensemble de données peut être disponible sous plusieurs formats",
            "toolTip@en_GB": "A data set can be available in multiple format",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "classname": "distribution",
                "schema_id": 9,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        },
        "indexedIn": {
            "label@fr_FR": "Indexé dans",
            "label@en_GB": "Indexed in",
            "type": "object",
            "classname": "technical_resource",
            "schema_id": 28,
            "description": "identifier pointing to a TechnicalResource Json document describing the catalog in which data are indexed",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "required": [
                "dbid"
            ]
        },
        "staffMember": {
            "label@fr_FR": "Personne en charge du depôt et diffusion des données",
            "label@en_GB": "Person in charge du dépôt et diffusion des données",
            "type": "array",
            "items": {
                "type": "object",
                "schema_id": 27,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        },
        "cost": {
            "label@fr_FR": "Coût lié au dépôt, diffusion",
            "label@en_GB": "Deposit and diffusion cost",
            "type": "array",
            "items": {
                "type": "object",
                "schema_id": 3,
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "required": [
                    "dbid"
                ]
            }
        }
    },
    "required": [
        "description",
        "distribution"
    ]
}