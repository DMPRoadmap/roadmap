{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "ContributorStandard",
    "description": "ContributorStandard template",
    "type": "object",
    "class": "ContributorStandard",
    "properties": {
        "person": {
            "type": "object",
            "class": "Person",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "template_name": "PersonStandard",
            "required": [
                "dbid"
            ],
            "description": "Personnes impliquées dans la production et gestion des données"
        },
        "role": {
            "type": "string",
            "description": "Rôle d'une personne dans la gestion et production des données",
            "inputType": "dropdown",
            "label@fr_FR": "Rôle",
            "label@en_GB": "Role",
            "values@en_GB": [
                "Project coordinator",
                "DMP manager",
                "Data producer",
                "Data manager",
                "Data steward",
                "Legal Expert",
                "Data Protection Officer",
                "Other"
            ],
            "values@fr_FR": [
                "Coordinateur du projet",
                "Responsable du plan de gestion de données",
                "Producteur de données",
                "Gestionnaire de données",
                "Expert juridique",
                "Responsable de la protection des données",
                "Autre"
            ],
            "overridable": true,
            "tooltip@fr_FR": "Sélectionner dans la liste déroulante le rôle du contributeur",
            "tooltip@en_GB": "Choose in the dropdown the contributor's role"
        }
    },
    "required": [
        "person",
        "role"
    ],
    "to_string": [
        "$.person.firstName",
        " ",
        "$.person.lastName ",
        " (",
        "$.role",
        ")"
    ]
}