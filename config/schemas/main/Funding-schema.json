{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "../Documentation/Implementation/Data_model/Json/",
    "title": "Funding",
    "description": "The documentation of funding schema",
    "type": "object",
    "properties": {
        "funder": {
            "label@fr_FR": "Financeur",
            "label@en_GB": "Funder",
            "type": "object",
            "classname": "funder",
            "properties": {
                "dbid": {
                    "type": "number",
                    "description": "internal pointer to a Funder Json document"
                }
            },
            "required": ["dbid"]
        },
        "grantId": {
            "label@fr_FR": "Identifiant du financement",
            "label@en_GB": "Grant ID",
            "type": "string"
        },
        "fundingStatus": {
            "label@fr_FR": "Statut du financement",
            "label@en_GB": "Funding status",
            "type": "string",
            "inputType": "dropdown",
            "values": ["Planned", "Applied", "Granted", "Rejected"]
        }
    },
    "required": [
        "funder",
        "fundingStatus",
        "name"
    ]
}