{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "Research output contact",
    "description": "Contact template",
    "type": "object",
    "properties": {
        "person": {
            "type": "object",
            "class": "Person",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "template_name": "PersonStandard",
            "required": [
                "dbid"
            ],
            "description": "Informations concernant la personne"
        },
        "role": {
            "type": "string",
            "description": "Rôle d'une personne dans la gestion et production des données",
            "label@fr_FR": "Rôle",
            "label@en_GB": "Role",
            "const@en_GB": "Contact",
            "const@fr_FR":"Personne contact"
        }
           
            
    },
    "required": [
        "person",
        "role"
    ],
    "to_string": [
        "$.person.firstName",
        " ",
        "$.person.lastName ",
        "(",
        "$.role",
        ")"
    ]
}