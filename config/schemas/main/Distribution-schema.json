{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/JSON/",
    "title": "Distribution schema",
    "description": "Schema describing distributions as defines in Dcat vocabulary: a dataset might be available in multiple serializations ",
    "type":"object",
    "properties":{
        "fileName":{
            "label@fr_FR": "Nom du fichier",
            "label@en_GB": "Filename",
            "type":"string",
            "toolTip@fr_FR": "Nom du fichier",
            "toolTip@en_GB":"Name of the file"
          },
          "description": {
            "label@fr_FR": "Description",
            "label@en_GB": "Description",
            "type": "string",
            "toolTip@fr_FR": "Description du contenu de la distribution",
            "toolTip@en_GB": "Description of the distribution content"
        },
        "releaseDate":{
            "label@fr_FR": "Date de diffusion",
            "label@en_GB": "Release date",
            "type":"string",
            "format":"date"
        },    
        "dataAccess":{
            "label@fr_FR": "Mode d'accès",
            "label@en_GB": "DataAccess",
            "type": "string",
            "format": "select",
            "values@fr_FR": ["Ouvert", "Restreint", "Fermé"],
            "values@en_GB": ["Open", "Restricted", "Closed"]
        },
        "fileFormat":{
            "label@fr_FR": "Format du fichier",
            "label@en_GB": "File format",
            "type": "string",
            "example": "text/csv, text/markdown, video/JPEG, application/json,... "
        },
       "application":{
            "label@fr_FR": "Application",
            "label@en_GB": "Application",
            "type":"string",
            "toolTip@fr_FR": "Application permettant de lire le fichier",
            "toolTip@en_GB": "Application to read the data"
       },
       "filevolume":{
        "label@fr_FR": "Volume du fichier",
        "label@en_GB": "File volume",
           "type":"number",
           "toolTip@fr_FR": "Nombre d'octets, peut être exprimé avec une notation exponentielle",
            "toolTip@en_GB": "Number oof octets, can be expressed with exponential notation",
           "example":"2.99e8"
       },  
       "hosting":{
        "label@fr_FR": "Hébergement",
        "label@en_GB": "Hosting",
           "type":"object",
           "classname": "technical_resource_usage",
           "description":"internal identifier pointing to a technicalResourceUsage JSON document",
           "properties":{
               "dbid":{
                   "type":"number"
               }
           },
           "required":["dbid"]
       },
        "availableUntil":{
            "label": "Available until",
            "type":"string",
            "format":"date",
            "description": "date until data is available"
       },
       "accessUrl":{
           "label": "Access URL",
           "type":"string",
           "format":"uri",
           "description":"url of the of a location that can provide access to this distribution"
       },
       "downloadUrl":{
           "label": "Download URL",
           "type":"string",
           "format":"uri",
           "description": "url of the downloadable file in a given format"
       },
        "license":{
            "type": "object",
            "classname": "license",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "required": ["dbid"]
       },
        "licenceStartDate":{
            "label": "License start date",
            "type":"string",
            "format":"date"
       }
    },
       
     "required":["fileVolume", "availableUntil", "dataAccess", "releaseDate", "accessUrl", "fileName", "fileFormat", "hosting", "license", "licenseStartDate"]

}
  