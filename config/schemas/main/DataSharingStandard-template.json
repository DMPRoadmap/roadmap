{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "DataSharingStandard",
    "description": "DataSharingStandard template",
    "type": "object",
    "class": "DataSharingStandard",
    "properties": {
        "description": {
            "type": "string",
            "description": "Aspects relatifs au partage des données",
            "inputType": "textarea",
            "label@fr_FR": "Description",
            "label@en_GB": "Description"
        },
        "reusability": {
            "type": "string",
            "description": "Potentiel de réutilisation des données et/ou limites de réutilisation",
            "label@fr_FR": "Potentiel de réutilisation",
            "label@en_GB": "Reusability",
            "tooltip@fr_FR": "Potentiel et/ou limite de réutilisation",
            "tooltip@en_GB": "Potential and/or limits of data resusability",
            "example@fr_FR": "Utile pour les statisticiens",
            "example@en_GB": "Use for statisticians"
        },
        "distribution": {
            "type": "array",
            "table_header@fr_FR": "Nom du fichier (Type MIME)",
            "table_header@en_GB": "File name (MIME type)",
            "items": {
                "type": "object",
                "class": "Distribution",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "template_name": "DistributionStandard",
                "required": [
                    "dbid"
                ]
            },
            "minItems": 1,
            "description": "Distribution physique des données",
            "label@fr_FR": "Distribution",
            "label@en_GB": "Distribution",
            "tooltip@fr_FR": "Un ensemble de données peut être disponible sous plusieurs formats",
            "tooltip@en_GB": "A data set can be available in multiple format"
        },
        "indexedIn": {
            "type": "object",
            "class": "TechnicalResourceStandard",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "template_name": "Host",
            "required": [
                "dbid"
            ],
            "description": "Catalogue dans lequel les données sont indexées",
            "label@fr_FR": "Indexé dans",
            "label@en_GB": "Indexed in"
        },
        "host": {
            "type": "object",
            "class": "TechnicalResourceStandard",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "template_name": "Host",
            "required": [
                "dbid"
            ],
            "description": "Entrepôt ou autre hébergement dans lequel les données seront mises à disposition",
            "label@fr_FR": "Entrepôts de données ou autres hébergements",
            "label@en_GB": "Data repository or other hostings"
        },
        "contributors": {
            "type": "array",
            "table_header@fr_FR": "Nom (rôle)",
            "table_header@en_GB": "Name (role)",
            "items": {
                "type": "object",
                "class": "Contributor",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "template_name": "ContributorStandard",
                "required": [
                    "dbid"
                ]
            },
            "description": "Personne(s) impliquée(s) dans la mise à disposition des données",
            "label@fr_FR": "Personne en charge du depôt et diffusion des données",
            "label@en_GB": "Person in charge of data deposition and diffusion"
        },
        "cost": {
            "type": "array",
            "table_header@fr_FR": "Type de coût : montant",
            "table_header@en_GB": "Cost type: amount",
            "items": {
                "type": "object",
                "class": "CostBasic",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "template_name": "CostStandard",
                "required": [
                    "dbid"
                ]
            },
            "description": "Coûts éventuels liés au dépôt des données dans un entrepôt",
            "label@fr_FR": "Coût lié au dépôt, diffusion",
            "label@en_GB": "Deposit and diffusion cost"
        }
    },
    "required": [
        "description",
        "distribution"
    ],
    "to_string": []
}