{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "DMP",
    "description": "DMP template",
    "type": "object",
    "properties": {
        "identifier": {
            "type": "number",
            "description": "Identifiant interne à l'application DMP OPIDoR"
        },
        "meta": {
            "type": "object",
            "class": "meta",
            "properties": {
                "dbid": {
                    "type": "number"
                }
            },
            "schema_id": 32,
            "required": [
                "dbid"
            ],
            "description": "Ensemble des métadonnées concernant le plan de gestion de données"
        },
        "project": {
            "type": "array",
            "items": {
                "type": "object",
                "class": "project",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "schema_id": 33,
                "required": [
                    "dbid"
                ]
            },
            "minItems": 1,
            "description": "Aspects relatifs au projet de recherche ou activité de recherche"
        },
        "researchOutput": {
            "type": "array",
            "items": {
                "type": "object",
                "class": "research_output",
                "properties": {
                    "dbid": {
                        "type": "number"
                    }
                },
                "schema_id": 34,
                "required": [
                    "dbid"
                ]
            },
            "minItems": 1,
            "description": "Ensemble des informations concernant les produits de recherche générés dans le cadre du projet ou activité de recherche"
        }
    },
    "required": [
        "identifier",
        "meta",
        "project",
        "researchOutput"
    ],
    "to_string": [
        "DMP: to_string not defined"
    ]
}