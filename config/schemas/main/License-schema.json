{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/JSON/",
    "title": "License schema",
    "description": "Schema for licenses",
    "type": "object",
    "properties": {
        "licenseName": {
            "label@fr_FR": "Nom de la licence",
            "label@en_GB": "License name",
            "type": "string",
            "example@fr_FR":"Licence ouverte version 2.0",
            "example@en_GB": "Licence ouverte version 2.0"
        },
        "licenseUrl": {
            "label@fr_FR": "Url de la licence",
            "label@en_GB": "License URL",
            "type": "string",
            "format": "uri",
            "example@fr_FR": "https://www.etalab.gouv.fr/wp-content/uploads/2017/04/ETALAB-Licence-Ouverte-v2.0.pdf",
            "example@en_GB": "https://www.etalab.gouv.fr/wp-content/uploads/2017/04/ETALAB-Licence-Ouverte-v2.0.pdf"
        }
    },
    "required": [
        "licenceName"
    ]
}