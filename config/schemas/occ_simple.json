{
  "type": "object",
  "$id": "http://dmp.opidor.fr/schema.json",
  "@context": "https://json-ld.org/contexts/person.jsonld",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "foaf:person",
    "pageNumber"
  ],
  "properties": {
    "name": {
      "type": "string",
      "label": "Name"
    },
    "surname": {
      "type": "string",
      "label": "Surname"
    },
    "age": {
      "type": "integer",
      "label": "Age"
    },
    "active": {
      "type": "boolean",
      "label": "Active?"
    },
    "contacts": {
      "type": "array",
      "label": "Infos de contact",
      "items": {
        "type": "string"
      }
    }
  }
}
