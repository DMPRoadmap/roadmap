{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../Documentation/Implementation/data_model/Json/",
    "title": "CostMesoUCA",
    "description": "CostMesoUCA template",
    "type": "object",
    "class": "CostMesoUCA",
    "properties": {
        "costType": {
            "type": "string",
            "description": "Type de coût engagé",
            "label@fr_FR": "Type de coût",
            "label@en_GB": "Cost type",
            "form_label@fr_FR": "Type de coût",
            "form_label@en_GB": "Cost type",
            "isConst": true
        },
        "amount": {
            "type": "number",
            "description": "Valeur numérique du montant",
            "label@fr_FR": "Montant",
            "label@en_GB": "Amount",
            "form_label@fr_FR": "Montant",
            "form_label@en_GB": "Amount"
        },
        "currency": {
            "type": "string",
            "description": "Monnaie dans laquelle ce coût est exprimé (Référentiel des monnaies. (Voir ISO 4217))",
            "label@fr_FR": "Devise",
            "label@en_GB": "Currency",
            "form_label@fr_FR": "Devise",
            "form_label@en_GB": "Currency",
            "isConst": true
        },
        "title": {
            "type": "string",
            "description": "Libellé du coût",
            "label@fr_FR": "Titre",
            "label@en_GB": "Title",
            "form_label@fr_FR": "Titre",
            "form_label@en_GB": "Title",
            "isConst": true
        }
    },
    "required": [
        "costType",
        "amount",
        "currency",
        "title"
    ],
    "to_string": [
        "$.costType",
        " : ",
        "$.amount",
        " ",
        "$.currency"
    ],
    "default": {
        "fr_FR": {
            "costType": "Stockage et/ou calcul",
            "currency": "EUR",
            "title": "Estimation du coût de stockage et/ou calcul auprès du Mésocentre Clermont Auvergne"
        },
        "en_GB": {
            "costType": "Storage and/or computation",
            "currency": "EUR",
            "title": "Estimated cost of storage and/or computation at Mésocentre Clermont Auvergne"
        }
    }
}